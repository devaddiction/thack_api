{% block content %}
    <section class="tiles">
        {% for city in cities %}
            <article class="style{{ city.city_id }}">
            <span class="image">
                <img src="{{ city.picture_thumb }}" alt="{{ city.name }}"/>
									</span>
                <a href="/city/{{ city.city_id }}">
                    <h2>{{ city.name }}</h2>
                    <div class="content">
                        <p>{{ city.short_description }}</p>
                    </div>
                </a>
            </article>
        {% endfor %}
    </section>
{% endblock %}


{% block javascript %}
    <script src="assets/js/app/index.js"></script>
{% endblock %}
